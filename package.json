{
    "name": "auto-snippet",
    "displayName": "Auto Snippet",
    "description": "Insert a snippet when opening an empty file",
    "icon": "icon.png",
    "version": "0.0.2",
    "publisher": "Gruntfuggly",
    "repository": "https://github.com/Gruntfuggly/auto-snippet",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Auto Snippet",
            "properties": {
                "autoSnippet.snippets": {
                    "type": "array",
                    "markdownDescription": "Mappings from file extensions to required snippets",
                    "default": [
                        {
                            "pattern": "ut-*.cpp",
                            "snippet": "ut-template"
                        },
                        {
                            "pattern": "*.h",
                            "snippet": "header-template"
                        },
                        {
                            "pattern": "*.cpp",
                            "snippet": "body-template"
                        },
                        {
                            "pattern": "*.js",
                            "snippet": "template"
                        }
                    ]
                }
            }
        }
    },
    "devDependencies": {
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "micromatch": "^3.1.10"
    }
}